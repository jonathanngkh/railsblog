<h1>New Article</h1>

<form action="/articles">
  Title<br>
  <input type="text" name="title">
  <br>
  Text
  <br>
  <input type="text" name="text">
  <br>
  <input type="submit" value="Save Article">
</form>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %>
    <br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>